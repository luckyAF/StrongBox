<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_open_lock"
        android:padding="@dimen/common_10"
        android:text="@string/tip_lock_open"
        android:textColor="@color/white"
        android:background="@color/gray"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/common_5"
        android:id="@+id/recyclerView_program"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>


    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/colorAccentPress"
        >
        <Button
            android:id="@+id/btn_add"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/add_button_background"
            android:text="@string/common_add"
            android:textSize="@dimen/font_button"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>
