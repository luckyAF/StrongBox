<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_edit" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="@string/file_old_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_display0" />

        <TextView
            android:id="@+id/tv_file_old_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:padding="@dimen/common_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="@string/file_now_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_display0" />

        <TextView
            android:id="@+id/tv_file_now_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:padding="@dimen/common_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10"
            android:text="@string/file_encrypt_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_display0" />

        <TextView
            android:id="@+id/tv_encrypt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:padding="@dimen/common_5" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.balysv.materialripple.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:mrl_rippleColor="?attr/colorPrimary"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_button_background"
                android:text="@string/file_delete_file"
                android:textColor="@android:color/white" />
        </com.balysv.materialripple.MaterialRippleLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:mrl_rippleColor="?attr/colorPrimary"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/btn_decryption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_button_background"
                android:text="@string/file_decryption_file"
                android:textColor="@android:color/white" />
        </com.balysv.materialripple.MaterialRippleLayout>


    </LinearLayout>


</LinearLayout>